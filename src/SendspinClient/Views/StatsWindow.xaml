<Window x:Class="SendspinClient.Views.StatsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Stats for Nerds"
        Height="650" Width="420"
        MinHeight="500" MinWidth="350"
        Background="#1a1a2e"
        WindowStartupLocation="CenterOwner">

    <Window.Resources>
        <Style x:Key="StatLabel" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#888"/>
            <Setter Property="FontSize" Value="11"/>
            <Setter Property="FontFamily" Value="Consolas"/>
        </Style>
        <Style x:Key="StatValue" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#fff"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="FontFamily" Value="Consolas"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
        <Style x:Key="StatValueGood" TargetType="TextBlock" BasedOn="{StaticResource StatValue}">
            <Setter Property="Foreground" Value="#4ade80"/>
        </Style>
        <Style x:Key="StatValueWarning" TargetType="TextBlock" BasedOn="{StaticResource StatValue}">
            <Setter Property="Foreground" Value="#fbbf24"/>
        </Style>
        <Style x:Key="StatValueBad" TargetType="TextBlock" BasedOn="{StaticResource StatValue}">
            <Setter Property="Foreground" Value="#f87171"/>
        </Style>
        <Style x:Key="SectionHeader" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#a78bfa"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="0,16,0,8"/>
        </Style>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0">
            <TextBlock Text="Stats for Nerds" FontSize="18" FontWeight="Bold" Foreground="#fff"/>
            <TextBlock Text="Real-time audio sync diagnostics" FontSize="11" Foreground="#888" Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Stats Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Margin="0,16,0,0">
            <StackPanel>
                <!-- Audio Format -->
                <TextBlock Text="AUDIO FORMAT" Style="{StaticResource SectionHeader}" Margin="0,0,0,8"/>
                <Border Background="#2d2d44" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <!-- Input (Incoming) Section Header -->
                        <TextBlock Grid.Row="0" Grid.ColumnSpan="2" Text="Incoming Stream"
                                   Foreground="#60a5fa" FontSize="10" FontWeight="SemiBold" Margin="0,0,0,6"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Format" Style="{StaticResource StatLabel}"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding InputFormatDisplay}"
                                   Style="{StaticResource StatValue}" Foreground="#4ade80"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Sample Rate" Style="{StaticResource StatLabel}" Margin="0,6,0,0"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding InputSampleRateDisplay}"
                                   Style="{StaticResource StatValue}" Margin="0,6,0,0"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Channels" Style="{StaticResource StatLabel}" Margin="0,6,0,0"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding InputChannelsDisplay}"
                                   Style="{StaticResource StatValue}" Margin="0,6,0,0"/>

                        <!-- Output Section Header -->
                        <TextBlock Grid.Row="4" Grid.ColumnSpan="2" Text="Output to Device"
                                   Foreground="#60a5fa" FontSize="10" FontWeight="SemiBold" Margin="0,14,0,6"/>

                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Format" Style="{StaticResource StatLabel}"/>
                        <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding OutputFormatDisplay}"
                                   Style="{StaticResource StatValue}" Foreground="#a78bfa"/>

                        <TextBlock Grid.Row="6" Grid.Column="0" Text="Sample Rate" Style="{StaticResource StatLabel}" Margin="0,6,0,0"/>
                        <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding OutputSampleRateDisplay}"
                                   Style="{StaticResource StatValue}" Margin="0,6,0,0"/>

                        <TextBlock Grid.Row="7" Grid.Column="0" Text="Bit Depth" Style="{StaticResource StatLabel}" Margin="0,6,0,0"/>
                        <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding OutputBitDepthDisplay}"
                                   Style="{StaticResource StatValue}" Margin="0,6,0,0"/>
                    </Grid>
                </Border>

                <!-- Advertised Capabilities -->
                <TextBlock Text="ADVERTISED CAPABILITIES" Style="{StaticResource SectionHeader}"/>
                <Border Background="#2d2d44" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Codec Priority" Style="{StaticResource StatLabel}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding AdvertisedCodecOrder}"
                                   Style="{StaticResource StatValue}" Foreground="#a78bfa"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Supported Formats" Style="{StaticResource StatLabel}" Margin="0,8,0,0"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding AdvertisedFormatsDisplay}"
                                   Style="{StaticResource StatValue}" Margin="0,8,0,0" TextWrapping="Wrap" MaxWidth="200"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Device Native" Style="{StaticResource StatLabel}" Margin="0,8,0,0"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding DeviceCapabilitiesDisplay}"
                                   Style="{StaticResource StatValue}" Margin="0,8,0,0"
                                   Foreground="{Binding DeviceCapabilitiesColor}"/>
                    </Grid>
                </Border>

                <!-- Sync Status -->
                <TextBlock Text="SYNC STATUS" Style="{StaticResource SectionHeader}"/>
                <Border Background="#2d2d44" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Sync Error" Style="{StaticResource StatLabel}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding SyncErrorDisplay}"
                                   Style="{StaticResource StatValue}"
                                   Foreground="{Binding SyncErrorColor}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Correction Mode" Style="{StaticResource StatLabel}" Margin="0,8,0,0"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding CorrectionModeDisplay}"
                                   Style="{StaticResource StatValue}" Margin="0,8,0,0"
                                   Foreground="{Binding CorrectionModeColor}"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Playback Active" Style="{StaticResource StatLabel}" Margin="0,8,0,0"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding IsPlaybackActive}"
                                   Style="{StaticResource StatValue}" Margin="0,8,0,0"/>
                    </Grid>
                </Border>

                <!-- Buffer Stats -->
                <TextBlock Text="BUFFER" Style="{StaticResource SectionHeader}"/>
                <Border Background="#2d2d44" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Buffered" Style="{StaticResource StatLabel}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding BufferedMsDisplay}" Style="{StaticResource StatValue}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Target" Style="{StaticResource StatLabel}" Margin="0,8,0,0"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding TargetMsDisplay}" Style="{StaticResource StatValue}" Margin="0,8,0,0"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Underruns" Style="{StaticResource StatLabel}" Margin="0,8,0,0"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding UnderrunCount}"
                                   Style="{StaticResource StatValue}" Margin="0,8,0,0"
                                   Foreground="{Binding UnderrunColor}"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Overruns" Style="{StaticResource StatLabel}" Margin="0,8,0,0"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding OverrunCount}" Style="{StaticResource StatValue}" Margin="0,8,0,0"/>
                    </Grid>
                </Border>

                <!-- Correction Stats -->
                <TextBlock Text="SYNC CORRECTION" Style="{StaticResource SectionHeader}"/>
                <Border Background="#2d2d44" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Playback Rate" Style="{StaticResource StatLabel}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding PlaybackRateDisplay}"
                                   Style="{StaticResource StatValue}"
                                   Foreground="{Binding PlaybackRateColor}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Samples Dropped" Style="{StaticResource StatLabel}" Margin="0,8,0,0"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding SamplesDroppedForSync}" Style="{StaticResource StatValue}" Margin="0,8,0,0"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Samples Inserted" Style="{StaticResource StatLabel}" Margin="0,8,0,0"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SamplesInsertedForSync}" Style="{StaticResource StatValue}" Margin="0,8,0,0"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Dropped Samples (overflow)" Style="{StaticResource StatLabel}" Margin="0,8,0,0"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding DroppedSamples}" Style="{StaticResource StatValue}" Margin="0,8,0,0"/>
                    </Grid>
                </Border>

                <!-- Clock Sync -->
                <TextBlock Text="CLOCK SYNC" Style="{StaticResource SectionHeader}"/>
                <Border Background="#2d2d44" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Status" Style="{StaticResource StatLabel}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding ClockSyncStatusDisplay}"
                                   Style="{StaticResource StatValue}"
                                   Foreground="{Binding ClockSyncStatusColor}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Clock Offset" Style="{StaticResource StatLabel}" Margin="0,8,0,0"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding ClockOffsetDisplay}" Style="{StaticResource StatValue}" Margin="0,8,0,0"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="Uncertainty" Style="{StaticResource StatLabel}" Margin="0,8,0,0"/>
                        <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding ClockUncertaintyDisplay}" Style="{StaticResource StatValue}" Margin="0,8,0,0"/>

                        <TextBlock Grid.Row="3" Grid.Column="0" Text="Drift Rate" Style="{StaticResource StatLabel}" Margin="0,8,0,0"/>
                        <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding DriftRateDisplay}" Style="{StaticResource StatValue}" Margin="0,8,0,0"/>

                        <TextBlock Grid.Row="4" Grid.Column="0" Text="Drift Reliable" Style="{StaticResource StatLabel}" Margin="0,8,0,0"/>
                        <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding DriftReliableDisplay}"
                                   Style="{StaticResource StatValue}" Margin="0,8,0,0"
                                   Foreground="{Binding DriftReliableColor}"/>

                        <TextBlock Grid.Row="5" Grid.Column="0" Text="Measurements" Style="{StaticResource StatLabel}" Margin="0,8,0,0"/>
                        <TextBlock Grid.Row="5" Grid.Column="1" Text="{Binding MeasurementCount}" Style="{StaticResource StatValue}" Margin="0,8,0,0"/>

                        <TextBlock Grid.Row="6" Grid.Column="0" Text="Output Latency" Style="{StaticResource StatLabel}" Margin="0,8,0,0"/>
                        <TextBlock Grid.Row="6" Grid.Column="1" Text="{Binding OutputLatencyDisplay}" Style="{StaticResource StatValue}" Margin="0,8,0,0"
                                   Foreground="#fbbf24"/>

                        <TextBlock Grid.Row="7" Grid.Column="0" Text="Static Delay" Style="{StaticResource StatLabel}" Margin="0,8,0,0"/>
                        <TextBlock Grid.Row="7" Grid.Column="1" Text="{Binding StaticDelayDisplay}" Style="{StaticResource StatValue}" Margin="0,8,0,0"
                                   Foreground="#60a5fa"/>
                    </Grid>
                </Border>

                <!-- Throughput -->
                <TextBlock Text="THROUGHPUT" Style="{StaticResource SectionHeader}"/>
                <Border Background="#2d2d44" CornerRadius="8" Padding="12" Margin="0,0,0,8">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <TextBlock Grid.Row="0" Grid.Column="0" Text="Total Samples Written" Style="{StaticResource StatLabel}"/>
                        <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding TotalSamplesWritten}" Style="{StaticResource StatValue}"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="Total Samples Read" Style="{StaticResource StatLabel}" Margin="0,8,0,0"/>
                        <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding TotalSamplesRead}" Style="{StaticResource StatValue}" Margin="0,8,0,0"/>
                    </Grid>
                </Border>

                <!-- Diagnostic Recording -->
                <TextBlock Text="DIAGNOSTIC RECORDING" Style="{StaticResource SectionHeader}"/>
                <Border Background="#2d2d44" CornerRadius="8" Padding="12">
                    <StackPanel>
                        <!-- Enable Recording Checkbox -->
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                <CheckBox IsChecked="{Binding IsDiagnosticRecordingEnabled, Mode=TwoWay}"
                                          VerticalAlignment="Center" Margin="0,0,8,0">
                                    <CheckBox.Style>
                                        <Style TargetType="CheckBox">
                                            <Setter Property="Foreground" Value="White"/>
                                        </Style>
                                    </CheckBox.Style>
                                </CheckBox>
                                <TextBlock Text="Enable Recording" Style="{StaticResource StatValue}" VerticalAlignment="Center"/>
                            </StackPanel>

                            <TextBlock Grid.Column="1" Text="{Binding BufferDurationDisplay}"
                                       Style="{StaticResource StatLabel}" VerticalAlignment="Center"/>
                        </Grid>

                        <!-- Status Row -->
                        <Grid Margin="0,12,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <TextBlock Grid.Column="0" Text="Status" Style="{StaticResource StatLabel}"/>
                            <TextBlock Grid.Column="1" Text="{Binding RecordingStatusDisplay}"
                                       Style="{StaticResource StatValue}"
                                       Foreground="{Binding RecordingStatusColor}"/>
                        </Grid>

                        <!-- Action Buttons -->
                        <Grid Margin="0,12,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>

                            <Button Grid.Column="0" Content="Save Recording"
                                    Command="{Binding SaveDiagnosticRecordingCommand}"
                                    IsEnabled="{Binding CanSaveRecording}"
                                    Margin="0,0,8,0"
                                    Padding="12,6"
                                    Background="#4f46e5" Foreground="White"
                                    BorderThickness="0" Cursor="Hand"
                                    HorizontalAlignment="Stretch">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="4"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsEnabled" Value="False">
                                                <Setter Property="Opacity" Value="0.5"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Opacity" Value="0.9"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>

                            <Button Grid.Column="1" Content="Open Folder"
                                    Command="{Binding OpenDiagnosticsFolderCommand}"
                                    Padding="12,6"
                                    Background="#374151" Foreground="White"
                                    BorderThickness="0" Cursor="Hand">
                                <Button.Style>
                                    <Style TargetType="Button">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="Button">
                                                    <Border Background="{TemplateBinding Background}"
                                                            CornerRadius="4"
                                                            Padding="{TemplateBinding Padding}">
                                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                    </Border>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="Opacity" Value="0.9"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Button.Style>
                            </Button>
                        </Grid>

                        <!-- Help Text -->
                        <TextBlock Text="Captures audio + sync metrics for Audacity analysis"
                                   Style="{StaticResource StatLabel}"
                                   Margin="0,10,0,0"
                                   TextWrapping="Wrap"/>
                    </StackPanel>
                </Border>
            </StackPanel>
        </ScrollViewer>

        <!-- Footer -->
        <StackPanel Grid.Row="2" Margin="0,16,0,0">
            <TextBlock Text="{Binding UpdateRateDisplay}" Style="{StaticResource StatLabel}" HorizontalAlignment="Center"/>
            <Button Content="Close" Click="CloseButton_Click"
                    HorizontalAlignment="Center" Margin="0,12,0,0"
                    Padding="24,8"
                    Background="#4f46e5" Foreground="White"
                    BorderThickness="0" Cursor="Hand">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}"
                                            CornerRadius="6"
                                            Padding="{TemplateBinding Padding}">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.9"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</Window>
